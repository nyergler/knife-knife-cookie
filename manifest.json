{
  "manifest_version": 2,
  "name": "🔪🔪🍪",
  "description": "Kill those cookies.",
  "version": "0.0.1",
  "icons": {
    "64": "icons/icon.png"
  },
  "background": {
    "scripts": [
      "background_script.js"
    ]
  },

  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_title": "🔪🔪🍪"
  },

  "permissions": [
    "browsingData",
    "cookies",
    "tabs",

    "http://*/*",
    "https://*/*"
  ]
}